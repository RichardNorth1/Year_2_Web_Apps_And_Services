@model ThAmCo.Events.Models.GuestViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Guest Details</h1>

<div>
    <a asp-action="Edit" asp-route-guestId="@Model.GuestId">Edit This Guest</a> | 
    <a asp-action="Index">Back To Guest Records</a>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Forename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Forename)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telephone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <hr />
    <h4>Event Bookings</h4>
    <hr />
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Event Name</label>
            </th>
            <th>
                <label>Event Date</label>
            </th>
            <th>
                <label>Guest Attendence</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bookings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttendedString)
                </td>
            </tr>
        }
    </tbody>
</table>


