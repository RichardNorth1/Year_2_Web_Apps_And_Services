@model ThAmCo.Events.Data.GuestBooking

@{
    ViewData["Title"] = "Delete";
}



<h3>Do you want to Remove This Guest Booking?</h3>
<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Guest.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GuestId" />
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-route-eventId="@Model.EventId">Back to List</a>
    </form>
</div>
