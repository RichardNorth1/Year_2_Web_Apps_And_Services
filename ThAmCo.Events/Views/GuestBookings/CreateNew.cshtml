@model IEnumerable<ThAmCo.Events.Models.GuestViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Add New Guests To Event</h1>

<p>
    <a asp-action="Create">Create New Guest</a> | 
    <a asp-action="Index" asp-route-eventId="@ViewData["EventId"]">Back to Bookings</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Forename)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <button class="btn btn-primary" onclick="location.href='@Url.Action("CreateNewBooking",
                            new {guestId = item.GuestId, eventId = ViewData["EventId"]})'" type="button">
                        Add Guest to booking
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


