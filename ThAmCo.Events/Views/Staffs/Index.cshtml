@model IEnumerable<ThAmCo.Events.Models.StaffViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Staff Records</h1>

<p>
    <a asp-action="Create">Create New Staff Member</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstAidQualified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Forename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstAidQualifiedString)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-staffId="@item.StaffId">Edit</a> |
                    <a asp-action="Details" asp-route-staffId="@item.StaffId">Details</a> |
                    <a asp-action="Delete" asp-route-staffId="@item.StaffId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
