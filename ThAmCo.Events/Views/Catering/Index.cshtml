@model IEnumerable<ThAmCo.Events.Models.DTOs.FoodBookingViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 >Food Bookings</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodBookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientReferenceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodBookingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientReferenceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfGuests)
                </td>                
                <td>
                    <a asp-action="Edit" asp-route-id="/@item.ClientReferenceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ClientReferenceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClientReferenceId">Delete</a>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => item.MenuName)
                </td>                
            </tr>
            @foreach (var menu in item.MenuItems)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => menu.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => menu.UnitPrice)
                    </td>
                </tr>
                }
            <tr>
                <td><br></td>

            </tr>

        }
    </tbody>
</table>