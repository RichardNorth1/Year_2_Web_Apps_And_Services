@model ThAmCo.Events.Models.CreateEventViewModel;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Event</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventName" class="control-label" ></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventDuration" class="control-label"></label>
                <input asp-for="EventDuration" class="form-control" />
                <span asp-validation-for="EventDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedEventType" class="control-label"></label>
                <select  asp-for="SelectedEventType" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="EventDateStart" class="control-label"></label>
                <input asp-for="EventDateStart" class="form-control" type="date" />
            </div>
            <div class="form-group">
                <label asp-for="EventDateEnd" class="control-label"></label>
                <input asp-for="EventDateEnd" class="form-control" type="date" />
            </div>
            <div>
                <button id="Availability_btn" class="btn btn-primary">Check availability</button>
            </div>
            <div class="form-group">
                <label asp-for="SelectedEventDate" class="control-label"></label>
                <select asp-for="SelectedEventDate" class="form-control" disabled="disabled"></select>
                <span asp-validation-for="SelectedEventDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedMenuIdAndName" class="control-label"></label>
                <select asp-for="SelectedMenuIdAndName" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfGuestsForFoodBooking" class="control-label"></label>
                <input asp-for="NumberOfGuestsForFoodBooking" class="form-control">
                <span asp-validation-for="NumberOfGuestsForFoodBooking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/CreateEvent.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
