</div>
<div>
    <h3>Staffing For Event</h3>
    <hr/>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Staff Name</label>
            </th>
            <th>
                <label>Email</label>
            </th>
            <th>
                <label>First Aid Qualified</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Staffing)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstAidQualifiedString)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <h3>Guest List For Event</h3>
    <hr/>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Guest Name</label>
            </th>
            <th>
                <label>Email</label>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GuestBookings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
            </tr>
        }
    </tbody>
</table>
