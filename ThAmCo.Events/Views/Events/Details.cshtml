        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientReferenceId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientReferenceId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventCost)
        </dt>
        <dd class="col-sm-10">
