@model ThAmCo.Events.Models.EventViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Event</h1>

<a asp-action="Index">Back to Events</a>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="HasFirstAider" />
            <input type="hidden" asp-for="HasRequiredStaff" />
            <input type="hidden" asp-for="VenueName" />
            <input type="hidden" asp-for="Reference" />
            <input type="hidden" asp-for="EventType" />
            <input type="hidden" asp-for="EventDate" />
            <input type="hidden" asp-for="ClientReferenceId" />
            <input type="hidden" asp-for="MenuForEvent" />
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="EventDuration" class="control-label"></label>
                <input asp-for="EventDuration" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>


@section Scripts {
    <script type="text/javascript" src="~/js/CreateEvent.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
